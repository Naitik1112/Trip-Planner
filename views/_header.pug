header.header
  //- nav.nav.nav--tours
  //-   a.nav__el #{title}
  .header__logo
    a(href='/') 
      img(src='/img/logo-white.png' alt='Trip Planner logo')
  nav.nav.nav--user
    if user
      a.nav__el(href='/chat') Generate Plan
      a.nav__el(href='/history') History
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
      a.nav__el.nav__el--logout Log out
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up
